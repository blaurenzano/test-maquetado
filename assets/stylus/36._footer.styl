// El footer de la web
.footer
	background fondo_header
	color texto_header
	margin-top 4rem
	overflow hidden
	text-align center

	&__nav
		padding 1em

		&__ul
			list-style none
			margin 0
			padding 0

			&_li__a
				color texto_header
				display block
				padding 0.5em 1em

@media all and (min-width 720px)
	.footer__nav__ul
		&_li
			display inline-block
			
			&__a
				padding 0.5em 9.5px