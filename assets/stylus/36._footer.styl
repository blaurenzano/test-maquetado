// El footer de la web
.footer
	background gris_fuerte
	color gris_suave
	font-family fuente_heading
	padding 1em 1em 2em 1em
	
	// Copyright
	&__copyright
		p
			text-indent 0

	// las REdes sociales
	&__redes_sociales
		&__list
			margin 0
			padding 0

			&__item
				display inline-block
				margin-right 32px

				a
					display inline-block
					font-size 1.5em
					text-decoration none
			
			&__item:last-child
			&__item.last-child
				margin-right 0


// Ir hacia arriba
.gotop
	bottom -5em
	display inline-block
	height 50px
	position fixed
	right 0.5em
	transition_comun()
	width 50px
	z-index 892

	a
		//background rosa_suave
		background-image url("data:image/png;base64,")
		display block
		height 100%
		opacity 0.5
		padding 0
		text-decoration none
		text-shadow_lindo()
		width 100%

		&:hover
			opacity 1

	&-mostrar
		bottom 1em

	&-ocultar
		bottom -5em

@media only screen and ( min-width: 900px )
	.footer
		padding-bottom 1em


@media only print
	.gotop
		display none