// Imágenes y tamaños
.page
.entradas
	&__article
		.wp-caption
			border 1px solid plateado
			display table-cell
			overflow hidden
			padding 0
			vertical-align top

			a
				display block
				position relative
				text-decoration none
				transition_comun()
				
				&:after
					background rgba(verde_azulado, 0.5)
					content ""
					height 100%
					left 0
					opacity 0
					position absolute
					top 0
					transition_comun()
					width 100%
				
				&:before
					color blanco
					content "+"
					font-family Monospace
					font-size 60px
					height 60px
					line-height 100%
					left 50%
					margin -30px 0 0 -20px
					opacity 0
					position absolute
					text-decoration none
					transition_comun()
					top 10%
					width 40px
					z-index 1
					
				&:hover
				&:focus
					&:after
					&:before
						opacity 1
						text-decoration none
					&:before
						top 50%
			
			.wp-caption-text
				background gris_nube
				color gris_suave
				font-family fuente_heading_bold_italic
				font-style italic
				font-weight bolder
				padding 0.5em
				text-align center
						

			img
				display block
				height auto !important
				width 100%

// Alineaciones
.entradas
.page
	&__article
		figure.aligncenter
			display block
			margin 1em auto
			max-width 100%
			text-align center
			
		figure.alignleft
		figure.alignright
			max-width 100%

@media all and (min-width: 480px)
	.entradas
	.page
		&__article
			figure.alignleft
					display inline-block
					float left
					margin 1em 1em 1em 0

			figure.alignright
					display inline-block
					float right
					margin 1em 0 1em 1em
